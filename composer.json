{
    "name": "oyic/secure-login",
    "description": "A secure WordPress login plugin with custom URLs and email OTP authentication",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "OYIC Team",
            "email": "support@oyic.com",
            "homepage": "https://oyic.com"
        }
    ],
    "keywords": [
        "wordpress",
        "security",
        "login",
        "otp",
        "authentication",
        "two-factor"
    ],
    "homepage": "https://github.com/oyic/oyic-secure-login",
    "support": {
        "issues": "https://github.com/oyic/oyic-secure-login/issues",
        "source": "https://github.com/oyic/oyic-secure-login"
    },
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6",
        "wp-coding-standards/wpcs": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "OYIC\\SecureLogin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OYIC\\SecureLogin\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=WordPress src/",
        "phpcbf": "phpcbf --standard=WordPress src/",
        "lint": "find src/ -name '*.php' -exec php -l {} \\;",
        "post-install-cmd": [
            "[ -f vendor/bin/phpcs ] && vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs || true"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
